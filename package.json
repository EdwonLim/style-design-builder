{
  "name": "youth-design",
  "private": true,
  "skpm": {
    "main": "styleguide.sketchplugin",
    "manifest": "src/manifest.json"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "render": "skpm-build --watch --run",
    "render:once": "skpm-build --run",
    "postinstall": "npm run build && skpm-link"
  },
  "author": "Jon Gold <jon.gold@airbnb.com>",
  "license": "MIT",
  "dependencies": {
    "chroma-js": "^1.2.2",
    "react": "^15.4.2",
    "react-primitives": "^0.5.0",
    "react-sketchapp": "^1.1.0",
    "react-test-renderer": "^15.4.2",
    "styled-components": "^3.2.6"
  },
  "devDependencies": {
    "@skpm/builder": "^0.2.0",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "tinycolor2": "^1.4.1"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "test",
        "chore",
        "refactor",
        "opti"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "请输入message信息!",
      "helpMessage": "Commit message 格式错误, \n请查看规范: http://wiki.corp.qunar.com/pages/viewpage.action?pageId=159698767"
    }
  }
}
